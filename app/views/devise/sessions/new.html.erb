<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "styled-form", :novalidate=>true}) do |f| %>
  <div class="form-group">
    <label class="styled-label">E-Mail</label>
    <%= f.email_field :email, :class => "styled-input", :autofocus => true, :required => true, 'data-error' =>
    "You must enter a correct E-Mail address" %>
    <div class="help-block with-errors"></div>
  </div>
  
  <div class="form-group">
    <label class="styled-label">Password</label>
    <%= f.password_field :password, :class => "styled-input", :required => true %>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
        <%= f.check_box :remember_me %> 
        <label class="styled-label" for="user_remember_me">Remember Me </label>
    </div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn-submit" %></div>
<% end %>
