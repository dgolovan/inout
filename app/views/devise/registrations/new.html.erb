<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "styled-form", :novalidate=>true }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <label class="styled-label">Email</label>
    <%= f.email_field :email, :class => "styled-input", :autofocus => true, :required => true, 'data-error'=> "You must enter a correct E-Mail address." %>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group">
    <label class="styled-label">First Name</label>
    <%= f.text_field :first_name, :class => "styled-input", :required => true %>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group">
    <label class="styled-label">Last Name</label>
    <%= f.text_field :last_name, :class => "styled-input", :required => true %>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group">
    <label class="styled-label">Password</label>
    <%= f.password_field :password, :class => "styled-input", :required => true, 'data-toggle' => "validator", 'data-minlength' =>"8", 'data-error' => "The password should be minimum 8 characters long" %>
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group">
    <label class="styled-label">Password Confirmation</label>
    <%= f.password_field :password_confirmation, :class => "styled-input", :required => true, 'data-match' => "#user_password", 'data-match-error' => "The password does not match." %>
      <div class="help-block with-errors"></div>
  </div>

  <div><%= f.submit "Sign up", :class => "btn-submit" %></div>
<% end %>
